class Solution {
    public boolean isNStraightHand(int[] hand, int gp) {
        TreeMap<Integer,Integer> map = new TreeMap<>();
        for(int i : hand){
            map.put(i,map.getOrDefault(i,0)+1);
        }
        
        while(!map.isEmpty()){
            int st = map.keySet().iterator().next();
            for(int i=0;i<gp;i++){
                int curr = st+i;
                if(!map.containsKey(curr)){
                    return false;
                }
                map.put(curr,map.get(curr)-1);
                if(map.get(curr)==0){
                    map.remove(curr);
                }
            }
        }
        return true;
    }
}
