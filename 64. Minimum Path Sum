class Solution {
    int m;
    int n;
    Integer[][] dp;
    public int solve(int[][] grid, int i, int j){
        if(i==m-1&&j==n-1){
            return grid[i][j];
        }
        if(i<0||j<0||i>=m||j>=n){
            return Integer.MAX_VALUE;
        }
        if(dp[i][j]!=null){
            return dp[i][j];
        }
        int r = solve(grid,i,j+1);
        int d = solve(grid,i+1,j);

        return dp[i][j] = grid[i][j] + Math.min(r,d);
    }
    public int minPathSum(int[][] grid) {
        m = grid.length;
        n = grid[0].length;
        dp = new Integer[m][n];
        return solve(grid,0,0);
    }
}
