class Solution {
    public void solve(List<List<Integer>> res, int[] nums, int idx, int n, ArrayList<Integer> a){
        res.add(new ArrayList<>(a));
        if(idx>=n){
            return;
        }
        for(int i=idx;i<n;i++){
            a.add(nums[i]);
            solve(res,nums,i+1,n,a);
            a.remove(a.size()-1);
        }
    }
    public List<List<Integer>> subsets(int[] nums) {
        Arrays.sort(nums);
        List<List<Integer>> res = new ArrayList<>();
        solve(res,nums,0,nums.length,new ArrayList<>());
        return res;
    }
}
