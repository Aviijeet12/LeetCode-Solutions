class Solution {
    int n;
    Integer[][][] dp;
    public int solve(int[] nums, int idx, int flag, int cd){
        if(idx>=n){
            return 0;
        }
        if(cd==1){
            return dp[idx][flag][cd] = solve(nums,idx+1,1,0);
        }
        if(dp[idx][flag][cd]!=null){
            return dp[idx][flag][cd];
        }
        int profit = 0;
        if(flag==1&&cd==0){
            int buy = -nums[idx] + solve(nums,idx+1,0,0);
            int skip = solve(nums,idx+1,1,0);
            profit = Math.max(buy,skip);
        }else if(flag==0&&cd==0){
            int sell = nums[idx] + solve(nums,idx+1,1,1);
            int skip = solve(nums,idx+1,0,0);
            profit = Math.max(sell,skip);
        }
        return dp[idx][flag][cd] = profit;
    }
    public int maxProfit(int[] nums) {
        n = nums.length;
        dp = new Integer[5001][2][2];
        return solve(nums,0,1,0);
    }
}
