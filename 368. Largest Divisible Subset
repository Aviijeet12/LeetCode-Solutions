class Solution {
    public List<Integer> largestDivisibleSubset(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        List<Integer> res = new ArrayList<>();
        int[] dp = new int[n];
        int[] prev = new int[n];
        Arrays.fill(dp,1);
        Arrays.fill(prev,-1);
        int maxl = 1;
        int idx = 0;
        for(int i=1;i<n;i++){
            for(int j=0;j<i;j++){
                if(nums[i]%nums[j]==0){
                    if(dp[i]<dp[j]+1){
                        dp[i] = dp[j]+1;
                        prev[i] = j;
                    }
                    //dp[i] = Math.max(dp[i],dp[j]+1);
                    //prev[i] = j;
                    if(maxl<dp[i]){
                        maxl = dp[i];
                        idx = i;
                    }
                }
            }
        }
        while(idx!=-1){
            res.add(nums[idx]);
            idx = prev[idx];
        }
        return res;
    }
}
