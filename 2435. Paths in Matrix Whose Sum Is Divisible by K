class Solution {
    int n;
    int m;
    int mod = 1000000007;
    Integer[][][] dp;
    public int solve(int[][] grid, int k, int i, int j, int sum){
        if(i<0||j<0||i>=n||j>=m){
            return 0;
        }
        sum = (sum+grid[i][j])%k;
        if(dp[i][j][sum]!=null){
            return dp[i][j][sum];
        }
        if(i==n-1&&j==m-1){
            if(sum==0){
                return 1;
            }
            return 0;
        }
        int d = solve(grid,k,i+1,j,sum);
        int r = solve(grid,k,i,j+1,sum);
        return dp[i][j][sum] = (d+r)%mod;
    }
    public int numberOfPaths(int[][] grid, int k) {
        n = grid.length;
        m = grid[0].length;
        dp = new Integer[n][m][k];
        return solve(grid,k,0,0,0);
    }
}
