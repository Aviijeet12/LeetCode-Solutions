class Solution {
    public int minRemoval(int[] nums, int k) {
        int n = nums.length;
        if(n==1){
            return 0;
        }
        Arrays.sort(nums);
        int i=0;
        int j = 0;
        int maxl = 1;
        while(j<n){
            int min = nums[i];
            int max = nums[j];
            while(i<j&&(long)min*k<max){
                i++;
                min = nums[i];
            }
            maxl = Math.max(maxl,j-i+1);
            j++;
        }
        return n - maxl;
    }
}
