class Solution {
    int n;
    int m;
    
    public boolean solve(Boolean[][] dp, String s, String p, int i, int j){
        if(i<0&&j<0){
            return true;
        }
        if(j<0&&i>=0){
            return false;
        }
        if(i<0&&j>=0){
            for(int k=j;k>=0;k--){
                if(p.charAt(k)!='*'){
                    return false;
                }
            }
            return true;
        }
        if(dp[i][j]!=null){
            return dp[i][j];
        }
        if(p.charAt(j)==s.charAt(i)||p.charAt(j)=='?'){
            return dp[i][j] = solve(dp,s,p,i-1,j-1);
        }else if(p.charAt(j)=='*'){
            return dp[i][j] = solve(dp,s,p,i-1,j) || solve(dp,s,p,i,j-1);
        }else{
            return dp[i][j] = false;
        }

    }
    public boolean isMatch(String s, String p) {
        n = s.length()-1;
        m = p.length()-1;
        Boolean[][] dp = new Boolean[n+1][m+1];
        return solve(dp,s,p,n,m);        
    }
}
