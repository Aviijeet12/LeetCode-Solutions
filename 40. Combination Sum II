class Solution {
    public void solve(List<List<Integer>> res, int idx, int[] arr, int tg, ArrayList<Integer> a){
        if(tg==0){
            res.add(new ArrayList<>(a));
            return;
        }
        if(tg<0){
            return;
        }
        for(int i=idx;i<arr.length;i++){
            if(i>idx&&arr[i]==arr[i-1]){
                continue;
            }
            if(tg<arr[i]){
                break;
            }
            a.add(arr[i]);
            solve(res,i+1,arr,tg-arr[i],a);
            a.remove(a.size()-1);
        }
    }
    public List<List<Integer>> combinationSum2(int[] arr, int tg) {
        Arrays.sort(arr);
        List<List<Integer>> res = new ArrayList<>();
        solve(res,0,arr,tg,new ArrayList<>());
        return res;
    }
}
