/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
 class Pair{
    TreeNode root;
    int cnt;
    Pair(TreeNode root, int cnt){
        this.root = root;
        this.cnt = cnt;
    }
 }
class Solution {
    public int widthOfBinaryTree(TreeNode root) {
        if(root==null) return 0;
        Deque<Pair> dq = new ArrayDeque<>();
        dq.offer(new Pair(root,0));
        int maxw=Integer.MIN_VALUE;
        while(!dq.isEmpty()){
            int k = dq.size();
            int l = dq.getFirst().cnt;
            int r = dq.getLast().cnt;
            int w = r-l+1;
            maxw = Math.max(maxw,w);
            for(int i=0;i<k;i++){
                Pair p = dq.poll();
                TreeNode curr = p.root;
                int t = p.cnt;
                if(curr.left!=null){
                    dq.offer(new Pair(curr.left,2*t+1));
                }
                if(curr.right!=null){
                    dq.offer(new Pair(curr.right,2*t+2));
                }
            }
        }
        return maxw;
    }
}
