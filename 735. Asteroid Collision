class Solution {
    public int[] asteroidCollision(int[] nums) {
        Stack<Integer> st = new Stack<>();
        for(int i=0;i<nums.length;i++){
            while(!st.isEmpty()&&nums[i]<0&&st.peek()>0){
                int sum = nums[i]+st.peek();
                if(sum<0){
                    st.pop();
                }else if(sum>0){
                    nums[i] = 0;
                    break;
                }else{
                    st.pop();
                    nums[i]=0;
                    break;
                }
            }
            if(nums[i]!=0){
                st.push(nums[i]);
            }
        }
        int[] res = new int[st.size()];
        for(int i = res.length-1;i>=0;i--){
            res[i] = st.pop();
        }
        return res;
    }
}
