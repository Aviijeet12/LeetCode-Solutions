class Solution {
    public boolean isSorted(List<Integer> a){
        int n = a.size();
        for(int i=1;i<n;i++){
            if(a.get(i-1)>a.get(i)){
                return false;
            }
        }
        return true;
    }
    public int minimumPairRemoval(int[] nums) {
        List<Integer> a = new ArrayList<>();
        for(int i:nums){
            a.add(i);
        }
        int cnt=0;
        while(!isSorted(a)){
            int minp = Integer.MAX_VALUE;
            int idx = 0;
            for(int i=0;i<a.size()-1;i++){
                int p = a.get(i)+a.get(i+1);
                if(p<minp){
                    minp = p;
                    idx = i;
                }
            }
            a.set(idx,minp);
            a.remove(idx+1);
            cnt++;
        }
        return cnt;
    }
}
