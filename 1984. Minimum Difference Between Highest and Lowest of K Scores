class Solution {
    public int minimumDifference(int[] nums, int k) {
        if(k==1){
            return 0;
        }
        int n = nums.length;
        Arrays.sort(nums);
        int mini = Integer.MAX_VALUE;
        for(int l=0,r=k-1;r<n;){
            mini = Math.min(mini,nums[r++]-nums[l++]);
        }
        return mini;
    }
}   
