class Solution {
    public boolean check(int[] a, int[] b){
        for(int i=0;i<26;i++){
            if(a[i]!=b[i]){
                return false;
            }
        }
        return true;
    }
    public List<Integer> findAnagrams(String s, String p) {
        List<Integer> res = new ArrayList<>();
        int[] pf = new int[26];
        int[] sf = new int[26];
        for(char c : p.toCharArray()){
            pf[c-'a']++;
        }
        int i=0;
        int j=0;
        int l = p.length();
        while(j<s.length()){
            sf[s.charAt(j)-'a']++;
            if(j-i+1==l){
                //String temp = s.substring(i,j+1);
                if(check(sf,pf)){
                    res.add(i);
                }
                sf[s.charAt(i)-'a']--;
                i++;
            }
            j++;
        }
        return res;
    }
}
