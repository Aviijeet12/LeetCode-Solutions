class Solution {
    int m = 1000000007;
    public int[] getnsr(int[] arr){
        int[] a = new int[arr.length];
        Stack<Integer> st = new Stack<>();
        int n = arr.length;
        for(int i=n-1;i>=0;i--){
            if(st.isEmpty()){
                a[i] = n;
            }else{
                while(!st.isEmpty()&&arr[st.peek()]>arr[i]){
                    st.pop();
                }
                a[i] = st.isEmpty() ? n : st.peek();
            }
            st.push(i);
        }
        return a;
    }
    public int[] getnsl(int[] arr){
        int[] a = new int[arr.length];
        Stack<Integer> st = new Stack<>();

        for(int i=0;i<arr.length;i++){
            if(st.isEmpty()){
                a[i] = -1;
            }else{
                while(!st.isEmpty()&&arr[st.peek()]>=arr[i]){
                    st.pop();
                }
                a[i] = st.isEmpty() ? -1 : st.peek();
            }
            st.push(i);
        }
        return a;
    }
    public int sumSubarrayMins(int[] arr) {
        int[] nsl = getnsl(arr);
        int[] nsr = getnsr(arr);
        int n = arr.length;

        long ans = 0;
        for(int i=0;i<n;i++){
            int ls = i - nsl[i];
            int rs = nsr[i] - i;
            long sum = ((long)ls*rs*arr[i])%m;
            ans = (ans+sum)%m;
        }
        return (int)ans;
    }
}
