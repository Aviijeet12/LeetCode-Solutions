class Solution {
    int n;
    Integer[][][] dp;
    public int solve(int[] nums, int k, int idx, int flag){
        if(idx>=n||k==0){
            return 0;
        }
        if(dp[idx][flag][k]!=null){
            return dp[idx][flag][k];
        }
        int profit = 0;
        if(flag==1){
            int take = -nums[idx] + solve(nums,k,idx+1,0);
            int skip = solve(nums,k,idx+1,flag);
            profit = Math.max(take,skip);
        }else{
            int take = nums[idx] + solve(nums,k-1,idx+1,1);
            int skip = solve(nums,k,idx+1,flag);
            profit = Math.max(take,skip);
        }
        return dp[idx][flag][k] = profit;
    }
    public int maxProfit(int k, int[] nums) {
        n = nums.length;
        dp = new Integer[n][2][k+1];
        return solve(nums,k,0,1);
    }
}
