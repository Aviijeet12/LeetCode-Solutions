class Solution {
    public boolean check(int[] freq){
        int cnt = 0;
        for(int i=0;i<26;i++){
            if(freq[i]==0) continue;
            if(cnt==0){
                cnt = freq[i];
            }else if(cnt!=freq[i]){
                return false;
            }   
        }
        return true;
    }
    public int longestBalanced(String s) {
        int n = s.length();
        int maxl = 0;
        for(int i=0;i<n;i++){
            int[] freq = new int[26];
            for(int j=i;j<n;j++){
                freq[s.charAt(j)-'a']++;
                if(check(freq)){
                    int len = j-i+1;
                    maxl = Math.max(maxl,len);
                }
            }
        }
        return maxl;
    }
}
