class Solution {
    int N,M,K;
    int m = 1000000007;
    Integer[][][] dp;
    public int solve(int idx,int searchcost, int maxsofar){
        if(idx>=N){
            if(searchcost==K){
                return 1;
            }
            return 0;
        }
        if(dp[idx][searchcost][maxsofar]!=null){
            return dp[idx][searchcost][maxsofar];
        }
        int res = 0;
        for(int i=1;i<=M;i++){
            if(i>maxsofar){
                res = (res+solve(idx+1,searchcost+1,i))%m;
            }else{
                res = (res+solve(idx+1,searchcost,maxsofar))%m;
            }
        }
        return dp[idx][searchcost][maxsofar] = res%m;
    }
    public int numOfArrays(int n, int m, int k) {
        N=n;M=m;K=k;
        dp = new Integer[51][51][101];
        return solve(0,0,0);
    }
}
