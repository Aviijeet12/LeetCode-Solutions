/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public void inorder(TreeNode root, ArrayList<Integer> a){
        if(root==null){
            return;
        }
        inorder(root.left,a);
        a.add(root.val);
        inorder(root.right,a);
    }

    public TreeNode solve(int[] arr, int l, int r){
        if(l>r){
            return null;
        }
        int m = (l+r)/2;
        TreeNode node = new TreeNode(arr[m]);
        node.left = solve(arr,l,m-1);
        node.right = solve(arr,m+1,r);
        return node;
    }

    public TreeNode balanceBST(TreeNode root) {
        ArrayList<Integer> a = new ArrayList<>();
        inorder(root,a);
        int[] arr = new int[a.size()];
        for(int i=0;i<a.size();i++){
            arr[i] = a.get(i);
        }
        return solve(arr,0,arr.length-1);
    }
}
