class Solution {
    int n;
    Integer[] dp;
    public int solve(int[] nums, int k, int i){
        if(i>=n){
            return 0;
        }
        if(dp[i]!=null){
            return dp[i];
        }
        int max = -1;
        int res = 0;
        for(int j=i;j<n&&j-i+1<=k;j++){
            max = Math.max(max,nums[j]);
            res = Math.max(res,(j-i+1)*max + solve(nums,k,j+1));
        }
        return dp[i] = res;
    }
    public int maxSumAfterPartitioning(int[] arr, int k) {
        n = arr.length;
        dp = new Integer[n];
        return solve(arr,k,0);
    }
}
